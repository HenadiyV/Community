@model Community.Domain.Entities.DescriptionUser

@{
    ViewBag.Title = "Сообщение";
}

<div class="site-output">
<div class="col-md-2 no-padding-left hidden-sm hidden-xs">
    <div class="left-sidebar">
        <div id="sidebar-stick">
            <ul class="menu-sidebar">
                <li><a href="~/Admin/ListUser"><i class="fa fa-reply"></i>Вернуться</a></li>
                <li><a href="~/Admin/Index"><i class="fa fa-home"></i>На главную</a></li>
                <li><a href="~/Home/Index"><i class="fa fa-sign-out"></i>Выход</a></li>
            </ul>
        </div><!-- // sidebar-stick -->
        <div class="clear"></div>
    </div><!-- // left-sidebar -->
</div>
    </div>

<div id="all-output" class="col-md-10 upload">

    <div id="upload">
        @using (Html.BeginForm())
        {
            <div class="row">
                <!-- upload -->
                @Html.HiddenFor(model => model.IdUser)
                <div class="col-md-9">
                    <h1 class="page-title"><span>Создать сообщение</span> </h1>
                    <div class="row">
                        <div class="col-md-12">
                            <label>Text </label>
                            <textarea class="form-control" name="textBoxName" rows="4" placeholder="Сообщение"></textarea>

                        </div>
                        <div class="col-md-6">
                                <input type="submit" value="Отправить" />
                        </div>
                    </div>
                </div>
            </div>

        }    <!-- // upload -->
            <form id="uploader">
                <input id="fileInput" type="file" multiple accept=".jpg,.jpeg,.png" onchange="validateFileType()">
            
                <button type="submit">Прикрепить файл к сообщению</button>
            </form>
    </div>
</div><!-- // upload -->
<script src="~/Scripts/myScript.js"></script>
