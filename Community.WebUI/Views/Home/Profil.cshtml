                <div class="col-md-8">
                    <div class="col-md-4">
                        <label> Email</label>
                    </div>
                    @Html.EditorFor(x => x.User.Email)
                </div>

                <div class="col-md-8">
                    <div class="col-md-4">
                        <label> Телефон</label>
                    </div>
                    @Html.EditorFor(x => x.User.Phone)
                </div>
            </div>
                <h3> Редактирование адреса</h3>
                <div class="row">
                    <div class="col-md-8">
                        <div class="col-md-4">
                            <label> Страна </label>
                        </div>
                        @Html.EditorFor(x => x.UserAddress.Contry)
                    </div>

                    <div class="col-md-8">
                        <div class="col-md-4">
                            <label> Город </label>
                        </div>
                        @Html.EditorFor(x => x.UserAddress.City)
                    </div>

                    <div class="col-md-8">
                        <div class="col-md-4">
                            <label> Улица </label>
                        </div>
                        @Html.EditorFor(x => x.UserAddress.Street)
                    </div>

                    <div class="col-md-8">
                        <div class="col-md-4">
                            <label> Дом </label>
                        </div>
                        @Html.EditorFor(x => x.UserAddress.Hous)
                    </div>

                    <div class="col-md-8">
                        <div class="col-md-4">
                            <label> Квартира </label>
                        </div>
                        @Html.EditorFor(x => x.UserAddress.Apartment)
                    </div>
                    <div class="col-md-6">
                        <button type="submit" class="btn btn-dm">Сохранить </button>
                    </div>
                </div>

            }
        </div>

