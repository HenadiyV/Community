            <h3> Редактирование личной информации</h3>
            @using (Html.BeginForm())
            {

                @Html.AntiForgeryToken()
            <div class="row">
                @Html.HiddenFor(model => model.User.Id)
                @Html.HiddenFor(model => model.User.RoleId)
                @Html.HiddenFor(model => model.User.Password)
                @Html.HiddenFor(model => model.User.GenderId)
                @Html.HiddenFor(model => model.UserAddress.IdAddress)
                @Html.HiddenFor(model => model.UserAddress.IdUser)
                <div class="col-md-8">
                    <div class="col-md-4">
                        <label>    Имя    </label>
                    </div>
                    @Html.EditorFor(x => x.User.Name)
                </div>

                <div class="col-md-8">
                    <div class="col-md-4">
                        <label> Фамилию  </label>
                    </div>
                    @Html.EditorFor(x => x.User.Surname)
                </div>

                <div class="col-md-8">
                    <div class="col-md-4">
                        <label> Отчество</label>
                    </div>
                    @Html.EditorFor(x => x.User.FirstName)
                </div>

                <div class="col-md-8">
                    <div class="col-md-4">
                        <label> Дата рождения </label>
                    </div>
                    <div class="col-md-8">
                        <span style="margin-left:-3%">
                            @Html.TextBoxFor(x => x.User.BirthDay, new { type = "date" })
                        </span>
                    </div>

                    <div class="col-md-8">
                        <div class="col-md-6">
                            <label style="margin-left:-7%">Пол</label>
                        </div>
                        @Html.DropDownListFor(x => x.User.GenderId, new SelectList(ViewBag.gender, "Id", "Gender"))
                    </div>
                    <div class="col-md-8"><br /></div>
                    @*@Html.EditorFor(x => x.User.BirthDay)*@
                </div>
